
@{
    Layout = "_LayoutAdmin2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Detalles de Compra</h1>
            <form class="needs-validation" novalidate method="post">

                <dl class="row">
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.Nombre
                    </dd>
                    <dt class="col-sm-2">
                        Calle
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.Calle
                    </dd>
                    <dt class="col-sm-2">
                        NumExt
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.NumExt
                    </dd>
                    <dt class="col-sm-2">
                        NumInt
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.NumInt
                    </dd>
                    <dt class="col-sm-2">
                        Telefono
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.Telefono
                    </dd>
                    <dt class="col-sm-2">
                        Alcaldia
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.Alcaldia
                    </dd>
                    <dt class="col-sm-2">
                        Colonia
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.Colonia
                    </dd>
                    <dt class="col-sm-2">
                        CP
                    </dt>
                    <dd class="col-sm-10">
                        @ViewBag.Direccion.CP
                    </dd>
                </dl>
                <hr class="my-4">

                @{
                    for (int i = 0; i < ViewBag.Detalles.Count; i++)
                    {
                        if (ViewBag.Detalles[i].OrdenId == ViewBag.IdOrden)
                        {

                            for (int j = 0; j < ViewBag.Productos.Count; j++)
                            {
                                if (ViewBag.Detalles[i].ProductoId == ViewBag.Productos[j].Id)
                                {
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            Nombre
                                        </dt>
                                        <dd class="col-sm-10">
                                            @ViewBag.Productos[j].Nombre
                                        </dd>
                                        <dt class="col-sm-2">
                                            Descripcion
                                        </dt>
                                        <dd class="col-sm-10">
                                            @ViewBag.Productos[j].Descripcion
                                        </dd>
                                        <dt class="col-sm-2">
                                            Cantidad
                                        </dt>
                                        <dd class="col-sm-10">
                                            @ViewBag.Detalles[i].Cantidad
                                        </dd>
                                        <dt class="col-sm-2">
                                            Precio
                                        </dt>
                                        <dd class="col-sm-10">
                                            @ViewBag.Detalles[i].Precio
                                        </dd>
                                    </dl>
                                }
                            }                            
                        }
                    }
                }

                <button asp-controller="Admin" asp-action="EliminarUsuario" method="post" class="w-100 btn btn-danger btn-lg" type="submit">Eliminar al Usuario</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
</body>
</html>
