@model IEnumerable<Ultragamma.Models.OrdenCompra>
@{
    Layout = "_LayoutAdmin2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <main class="container">


        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Usuarios</h1>
            <br>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">ID Dirección</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Total</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Detalles</th>


                    </tr>
                </thead>
                @foreach (var Orden in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Orden.Id</td>
                            <td>@Orden.DireccionId</td>
                            <td>@Orden.Correo</td>
                            <td>@Orden.Total</td>
                            <td>@Orden.Estado</td>
                            <td>
                                <form method="get">
                                    <input name="id" type="hidden" value="@Orden.Id">
                                    <input name="idDireccion" type="hidden" value="@Orden.DireccionId">
                                    <button class="btn btn-danger text-white" asp-action="OrdenDetalles">Borrar</button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <br />
    </main>
</body>
</html>