
@if (ViewBag.Entrar == "No")
{
    Layout = "_NoAdmin";
}
else
{
    @model IEnumerable<Ultragamma.Models.Producto>
    Layout = "_LayoutAdmin2";

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Document</title>
    </head>
    <body>
        <main class="container">
            <div class="my-3 p-3 bg-body rounded shadow-sm">
                <h1>Almacen</h1>
                <br>
                <p>
                    <form asp-controller="Admin" asp-action="NuevoProducto" method="get">
                        <input type="submit" class="btn btn-success" name="NuevoProducto" value="Nuevo Producto" />
                    </form>
                </p>
                <br>
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Sexo</th>
                            <th scope="col">Talla</th>
                            <th scope="col">Color</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Existencia</th>
                            <th scope="col">Editar</th>
                        </tr>
                    </thead>
                    @foreach (var Producto in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@Producto.Id</td>
                                <td>@Producto.Nombre</td>
                                <td>@Producto.Descripcion</td>
                                <td>@Producto.Categoria</td>
                                <td>@Producto.Sexo</td>
                                <td>@Producto.Talla</td>
                                <td>@Producto.Color</td>
                                <td>@Producto.Precio</td>
                                <td>@Producto.Existencia</td>
                                <td>
                                    <a class="btn btn-primary text-white" asp-action="EditarProducto" asp-route-id="@Producto.Id">Editar</a>
                                    <a class="btn btn-danger text-white" asp-action="EliminarProducto" asp-route-id="@Producto.Id">Borrar</a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <br />
        </main>
    </body>
    </html>
}


