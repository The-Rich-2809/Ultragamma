@model IEnumerable<Ultragamma.Models.Usuario>
@{
    Layout = "_LayoutAdmin2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <main class="container">


        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Usuarios</h1>
            <br>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Correo</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Nivel</th>
                        <th scope="col">Editar</th>

                    </tr>
                </thead>
                @foreach (var Usuarios in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Usuarios.Correo</td>
                            <td>@Usuarios.Nombre</td>
                            <td>@Usuarios.Nivel</td>
                            <td>
                                <a class="btn btn-primary text-white" asp-action="EditarUsuarios" asp-route-id="@Usuarios.Correo">Editar</a>
                                <a class="btn btn-danger text-white" asp-action="EliminarUsuario" asp-route-id="@Usuarios.Correo">Borrar</a>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <br />
    </main>
</body>
</html>
