@model Ultragamma.Models.Direccion
@{
    Layout = "_LayoutUsuario2";
}
<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.111.3">
    <title>Checkout example · Bootstrap v5.3</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="bg-body-tertiary">
    <div class="container">
        <main>
            <h1>Editar Direccion</h1>
            <br />
            <form method="post" class="needs-validation" novalidate>
                <input name="Id" type="hidden" value=@Html.DisplayFor(model => model.Id)>
                <input name="Correo" type="hidden" value=@Html.DisplayFor(model => model.Correo)>
                <div class="row">
                    <div class="col-sm-12">
                        <label for="firstName" class="form-label">Nombre Completo:</label>
                        <input name="Nombre" type="text" class="form-control" id="firstName" placeholder="" value="@Html.DisplayFor(model => model.Nombre)" required>
                        <div class="invalid-feedback">
                            Falta Nombre.
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">Calle</label>
                        <input name="Calle" type="text" class="form-control" value="@Html.DisplayFor(model => model.Calle)" id="address" placeholder="Calle, numero ext e int" required>
                        <div class="invalid-feedback">
                            Introduzca su calle.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="alcaldia" class="form-label">Numero Exterior</label>
                        <input name="NumExt" type="text" value="@Html.DisplayFor(model => model.NumExt)" class="form-control" id="NumExterior" placeholder="" required>
                        <div class="invalid-feedback">
                            Numero Exterior
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="colonia" class="form-label">Numero Interior</label>
                        <input name="NumInt" type="text" value="@Html.DisplayFor(model => model.NumInt)" class="form-control" id="NumInterior" placeholder="" required>
                        <div class="invalid-feedback">
                            Numero Interior
                        </div>
                    </div>

                    <div class="col-12">
                        <label for="celular" class="form-label">Numero telefonico</label>
                        <input name="Telefono" type="text" value="@Html.DisplayFor(model => model.Telefono)" class="form-control" id="celular" placeholder="+52 55 5555 5555" required>
                        <div class="invalid-feedback">
                            Introduzca su numero telefonico.
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="alcaldia" class="form-label">Alcaldia</label>
                        <input name="Alcaldia" type="text" value="@Html.DisplayFor(model => model.Alcaldia)" class="form-control" id="alcaldia" placeholder="" required>
                        <div class="invalid-feedback">
                            Introduzca su alcaldia
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="colonia" class="form-label">Colonia</label>
                        <input name="Colonia" type="text" value="@Html.DisplayFor(model => model.Colonia)" class="form-control" id="colonia" placeholder="" required>
                        <div class="invalid-feedback">
                            Introduzca su colonia
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="CP" class="form-label">Codigo Postal</label>
                        <input name="CP" type="text" value="@Html.DisplayFor(model => model.CP)" class="form-control" id="CP" placeholder="" required>
                        <div class="invalid-feedback">
                            Introduzca su CP
                        </div>
                    </div>

                    <hr class="my-4">
                    <button asp-controller="Usuario" asp-action="EditarDireccion" class="w-100 btn btn-primary btn-lg" type="submit">Editar Direccion</button>
                </div>
            </form>
        </main>
    </div>
</body>

</html>