@model IEnumerable<Ultragamma.Models.Direccion>
@{
    Layout = "_LayoutUsuario2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Direcciones</h1>
            <br>
            <p>
                <form asp-controller="Usuario" asp-action="AgregarDireccion" method="get">
                    <input type="submit" class="btn btn-success" name="NuevoProducto" value="Nueva Dirección" />
                </form>
            </p>
            <br>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Calle</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">NumExt</th>
                        <th scope="col">NumInt</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Alcaldia</th>
                        <th scope="col">Colonia</th>
                        <th scope="col">CP</th>

                    </tr>
                </thead>
                @foreach (var direccion in Model)
                {
                    if(direccion.Correo == ViewBag.Correo)
                    {
                        <tbody>
                            <tr>
                                <td>@direccion.Nombre</td>
                                <td>@direccion.Calle</td>
                                <td>@direccion.NumExt</td>
                                <td>@direccion.NumInt</td>
                                <td>@direccion.Telefono</td>
                                <td>@direccion.Alcaldia</td>
                                <td>@direccion.Colonia</td>
                                <td>@direccion.CP</td>
                                <td>
                                    <form method="get">
                                        <input name="id" type="hidden" value=@direccion.Id>
                                        <button class="btn btn-primary text-white" asp-controller="Usuario" asp-action="EditarDireccion">Editar</button>
                                        <button class="btn btn-danger text-white" asp-controller="Usuario" asp-action="EliminarDireccion">Borrar</button>
                                    </form>
                                    
                                </td>
                            </tr>
                        </tbody>
                    }
                }
            </table>
        </div>
        <br />
    </main>
</body>
</html>
