@model IEnumerable<Ultragamma.Models.Tarjeta>
@{
    Layout = "_LayoutUsuario2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Direcciones</h1>
            <br>
            <p>
                <form asp-controller="Usuario" asp-action="AgregarTarjeta" method="get">
                    <input type="submit" class="btn btn-success" name="NuevoProducto" value="Nueva Tarjeta" />
                </form>
            </p>
            <br>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Numero de Tarjeta</th>
                        <th scope="col">Fecha de Vencimiento</th>
                        <th scope="col">Editar</th>
                    </tr>
                </thead>
                @foreach (var tarjeta in Model)
                {
                    if (tarjeta.Correo == ViewBag.Correo)
                    {
                        <tbody>
                            <tr>
                                <td>@tarjeta.Nombre</td>
                                <td>@tarjeta.NumTarjeta</td>
                                <td>@tarjeta.FechaVen</td>
                                <td>
                                    <form method="get">
                                        <input name="id" type="hidden" value=@tarjeta.Id>
                                        <button class="btn btn-primary text-white" asp-controller="Usuario" asp-action="EditarTarjeta">Editar</button>
                                        <button class="btn btn-danger text-white" asp-controller="Usuario" asp-action="EliminarTarjeta">Borrar</button>
                                    </form>

                                </td>
                            </tr>
                        </tbody>
                    }
                }
            </table>
        </div>
        <br />
    </main>
</body>
</html>