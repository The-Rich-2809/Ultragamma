@{
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
    else if (ViewBag.Nivel == "Cliente")
    {
        Layout = "_LayoutUsuario";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/album/">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>
<body>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @{
                    for (int i = 0; i < 9; i++)
                    {
                        <form method="post">
                            <button asp-action="Productos" method="post" style="padding: 0; border: none;background: none;">
                                <div class="col">
                                    <div class="card shadow-sm">
                                        <img class="card-img-top" src="~/Images/Hombre1.jpg" alt="Card image cap">
                                        <div class="card-body">
                                            <p class="card-text">
                                                This is a wider card with supporting text below as a natural lead-in to additional
                                                content. This content is a little bit longer.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </button>
                        </form>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>