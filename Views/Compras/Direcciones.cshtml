@model IEnumerable<Ultragamma.Models.Direccion>
@{
    Layout = "_LayoutCompras";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/Carousel.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="bg-light">
    <br>
    <main>
        <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
            <div class="me-md-3 pt-3 px-3 pt-md-5 px-md-5 overflow-hidden">
                <h3><b>Mis domicilios</b></h3>
                <br>
                <form method="get">
                    @{
                        int i = 0;
                        foreach (var Direcciones in Model)
                        {
                            if (Direcciones.Correo == ViewBag.Correo)   
                            {
                                i++;
                                <div class="bg-white form-check" style="border-radius: 25px;">
                                    
                                    <input name="IdDireccion" class="form-check-input" type="radio" id="@Direcciones.Id"
                                           value="@Direcciones.Id">
                                    <label class="form-check-label" for="@Direcciones.Id"
                                           style="width: 80%; height: auto; border-radius: 21px;">
                                        <h5>C.P @Direcciones.CP</h5>
                                        <p>
                                            @Direcciones.Calle @Direcciones.NumExt @Direcciones.NumInt @Direcciones.Nombre - @Direcciones.Telefono
                                        </p>
                                    </label>
                                </div>
                            }
                        }
                        if (i == 0)
                        {
                            <div class="text-center">
                                <a asp-controller="Compras" asp-action="AgregarDireccion" type="button" class="btn btn-outline-primary">Agregar Dirección</a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <button type="button" class="btn btn-primary">Continuar</button>
                                <a asp-controller="Compras" asp-action="AgregarDireccion" type="button" class="btn btn-success">Agregar Dirección</a>
                                <button type="button" class="btn btn-warning">Modificar Direccion</button>
                                <a asp-controller="Compras" asp-action="EliminarDireccion" type="button" class="btn btn-danger">Eliminar</a>
                            </div>
                        }
                    }
                </form>

            </div>

            <div class="bg-white me-md-3 pt-3 px-3 pt-md-5 text-center overflow-hidden" style="border-radius: 25px;">
                <h2>Productos</h2>
                <img src="https://cdn.shopify.com/s/files/1/0346/7558/9257/products/661-2025A3_Playera_Basica_Lisa_Manga_Corta_Cuello_Redondo_Caballero_Milano_A_600x600_crop_center.jpg?v=1627429733"
                     alt="mdo" width="50" height="50" class="rounded-circle">
                <p>
                    Una playera es una camiseta de manga corta y cuello redondo que se usa como prenda de vestir informal
                    y cómoda en climas cálidos. Por lo general, está hecha de algodón y puede venir en una variedad de
                    colores y diseños.
                </p>

                <hr class="featurette-divider">
                <div class="row">
                    <div class="col-lg-6">
                        <h4>Productos</h4>
                    </div>
                    <div class="col-lg-6">
                        <h4>$14,987.50</h4>
                    </div>
                </div>

                <hr class="featurette-divider">
                <div class="row">
                    <div class="col-lg-6">
                        <h4><b>Productos</b></h4>
                    </div>
                    <div class="col-lg-6">
                        <h4><b>$14,987.50</b></h4>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>